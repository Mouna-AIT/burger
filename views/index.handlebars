<h1 class="title">Welcome To Mouna Burgers</h1>
{{!-- Menue --}}
<img src="/assets/css/images/logo.png" alt="burgerlogo" width=300 height=300>
<div>
<h2 class="readyburger"> Ready Burgers</h2>

<ul style="text-align:center">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

</div>

{{!-- burg eaten --}}
<div>
<h2 class="burgereaten">All Burgers You've Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
{{!-- add a burg --}}
<h2 class="addburger"> Want To Add A Burger of your choice?</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label><br>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Eaten!
  </div>

  <button type="submit" class="addbutton">Add Burger</button>
</form>
